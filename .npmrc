# FORCE NPM ONLY - DISABLE ALL ELECTRON AND GIT
registry=https://registry.npmjs.org/
user-agent=npm
package-manager=npm

# Completely disable git operations
git=false
git-tag-version=false
no-git-tag-version=true

# Performance settings
legacy-peer-deps=true
fetch-timeout=600000
fetch-retry-mintimeout=60000
fetch-retry-maxtimeout=300000

# Disable all optional dependencies
optional=false
no-optional=true

# Completely disable bun
force-npm=true
no-bun=true
bun=false

# Block electron packages entirely
@electron:ignore=true
electron:ignore=true